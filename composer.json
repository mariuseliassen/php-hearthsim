{
	"name": "mariuseliassen/php-hearthsim",
	"description": "A PHP representation of Hearthstone (Blizzard game) for board analyze and statistics",
	"license": "MIT",
	"keywords": ["php", "hearthstone", "analyze", "game", "statistics", "game-theory"],
	"authors": [
		{
			"name": "Marius Eliassen",
			"email": "marius@exchange.no"
		}
	],

	"require": {
		"php": ">=5.5.9",
		"symfony/event-dispatcher": "3.0.0"
	},

	"require-dev": {
		"phpunit/phpunit": "4.3.*"
	},

	"autoload": {
		"psr-0": {
			"PHPHearthSim": "src/"
		}
	},
	"autoload-dev": {
	    "psr-4": {
	        "PHPHearthSim\\Tests\\": "tests"
	    },
	    "classmap": [
	        "tests/TestCase.php"
	    ]
    },
	"minimum-stability": "stable"
}